<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".view.acao.VerAcao">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informações do evento"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_marginVertical="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verIdAcao"
        android:textSize="14dp"
        android:textColor="#000"
        android:layout_marginVertical="15dp"
        android:text="ID: " />

    <TextView
        android:id="@+id/verTickerAcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="Ticker: "
        android:textColor="#000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/verEmpresaAcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="Empresa: "
        android:textColor="#000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/verCotacaoAcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="Cotação: "
        android:textColor="#000"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="editarAcao"
            android:text="Editar" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="removerAcao"
            android:text="Remover" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="novaAcao"
        android:text="Nova Ação" />

</LinearLayout>